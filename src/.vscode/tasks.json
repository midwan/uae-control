{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Compile with VBCC",
            "type": "shell",
            "windows": {
                "command": "vc",
                "args": [
                    "+aos68k",
                    "-c99",
                    "-O2",
                    "-lamiga",
                    "-lauto",
                    "-o",
                    "UAE-Control",
                    "UAE-Control.c"
                ]
            },
            "osx": {
                "command": "vc",
                "args": [
                    "+aos68k",
                    "-c99",
                    "-O2",
                    "-lamiga",
                    "-lauto",
                    "-o",
                    "UAE-Control",
                    "UAE-Control.c"
                ]
            },
            "linux": {
                "command": "vc",
                "args": [
                    "+aos68k",
                    "-c99",
                    "-O2",
                    "-lamiga",
                    "-lauto",
                    "-o",
                    "UAE-Control",
                    "UAE-Control.c"
                ]
            },
            "group": {
                "kind": "build",
                "isDefault": true
            }
        },
        {
            "label": "Clean",
            "type": "shell",
            "windows": {
                "command": "rm",
                "args": [
                    "-Path",
                    "./UAE-Control,",
                    "./UAE-Control.o,"
                ]
            },
            "osx": {
                "command": "rm",
                "args": [
                    "./UAE-Control,",
                    "./UAE-Control.o,"
                ]
            },
            "linux": {
                "command": "rm",
                "args": [
                    "./UAE-Control,",
                    "./UAE-Control.o,"
                ]
            }
        },
        {
            "label": "LHA Pack",
            "type": "shell",
            "windows": {
                "command": "lha",
                "args": [
                    "a",
                    "UAE-Control.lha",
                    "UAE-Control",
                    "UAE-Control.info"
                ]
            },
            "osx": {
                "command": "lha",
                "args": [
                    "a",
                    "UAE-Control.lha",
                    "UAE-Control",
                    "UAE-Control.info"
                ]
            },
            "linux": {
                "command": "lha",
                "args": [
                    "a",
                    "UAE-Control.lha",
                    "UAE-Control",
                    "UAE-Control.info"
                ]
            }
        }
    ]
}